{% extends 'layoutAdmin.html.twig' %}
{% block title %}Administration de la taxe d'apprentissage{% endblock %}

{% block body %}
    <div class="container">
    <h1>Liste des taxes</h1>
        <div class="row">
            <div class="col-md-3 offset-9">
                {% if taxes is empty %}
                    <a class="btn btn-outline-primary mb-3" href="{{ path('taxe_new') }}">+ Cr√©er</a>
                {% endif %}
            </div>
        </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Taxe d'apprentissage</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for taxe in taxes %}
            <tr>
                <td>{{ taxe.taxeApprentissage | raw }}</td>
                <td><a class="btn btn-outline-primary" href="{{ path('taxe_show', { 'id': taxe.id }) }}">Voir</a></td>
                <td><a class="btn btn-outline-secondary" href="{{ path('taxe_edit', { 'id': taxe.id }) }}">Modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
