<section class="d-none d-sm-block section-logo">
    <div class="row side-bar">
        <div class="sidebar col-12">
            <h2 class="text-center ">NOS PARTENAIRES</h2>
        </div>
    </div>
    <div id="partner" class="carousel slide logoPartner" data-ride="carousel" data-interval="3000">
        <div class="carousel-inner w-100 mb-3" role="listbox">
            {% for partnair in partnairs|batch(5) %}
                <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                    <div class="row my-2  mx-3 d-flex justify-content-between">
                        {% for logo in partnair %}
                                <a href="{{ logo.link }}" target="_blank">
                                    <img src="{{ vich_uploader_asset(logo, 'image') }}" alt="{{ logo.name }}"
                                         class="mx-auto d-block shadow img-fluid logos">
                                </a>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev col-1" href="#partner" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next col-1" href="#partner" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
