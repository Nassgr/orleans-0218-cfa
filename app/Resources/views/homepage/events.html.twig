{% block body %}
  <div class="container-fluid">
      <div class="row">
          <div class="sidebar col-12">
            <h2 class="text-center">NOS ACTUALITES</h2>
          </div>
      </div>
      <div class="row">
          <div class="col-4 asidetitle">
              <h3><a href="{{ path('event_index') }}"> | Retrouvez toutes nos actualités et évènements à venir</a></h3>
          </div>
          <div class="col-8">
              <ul>
              {% for event in events %}
                  <li>
                      <p>{% if event.date %}{{ event.date|date('d/m/Y') }}{% endif %}
                          | <a href="#">{{ event.title }}</a></p>
                      <p>{{ event.description }}</p>
                  </li>
              {% endfor %}
              </ul>
              <p><span class="float-right"><a href="{{ path('event_index') }}">Plus d'actualités ...</a></span></p>
          </div>
      </div>
  </div>
{% endblock %}