{% extends 'layoutAdmin.html.twig' %}

{% block body %}
<div class="container">
    <h1>Les formations</h1>
        <div class="row">
            <div class="col-md-3 offset-9">
                <a class="btn btn-outline-primary mb-3" href="{{ path('formation_new') }}">+ Créer une formation</a>
            </div>
        </div>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Nom</th>
            <th class="text-center">Présentation du métier</th>
            <th class="text-center">Description</th>
            <th class="text-center">Référentiel</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td><a href="{{ path('formation_admin_show', { 'id': formation.id }) }}">{{ formation.id }}</a></td>
                <td>{{ formation.name }}</td>
                <td>{{ formation.shortPresentation }}</td>
                <td>{{ formation.jobDescription }}</td>
                <td>{{ formation.imageName }}</td>
                <td><a class="btn btn-outline-primary" href="{{ path('formation_admin_show', { 'id': formation.id }) }}">Voir</a></td>
                <td><a class="btn btn-outline-secondary" href="{{ path('formation_edit', { 'id': formation.id }) }}">Modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
