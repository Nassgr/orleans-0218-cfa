{% extends 'layoutAdmin.html.twig' %}
{% block title %}Administration des ufa du cfa de Blois{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des UFA</h1>
    <div class="row">
        <div class="col-md-3 offset-9">
            <a class="btn btn-outline-primary mb-3" href="{{ path('ufa_new') }}">+ Cr√©er une UFA</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Code Postal</th>
            <th>Ville</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for ufa in ufas %}
            <tr>
                <td><a href="{{ path('ufa_show', { 'id': ufa.id }) }}">{{ ufa.name }}</td>
                <td>{{ ufa.address }}</td>
                <td>{{ ufa.zipcode }}</td>
                <td>{{ ufa.town }}</td>
                <td><a class ="btn btn-outline-primary" href="{{ path('ufa_show', { 'id': ufa.id }) }}">Voir</a></td>
                <td><a class ="btn btn-outline-secondary" href="{{ path('ufa_edit', { 'id': ufa.id }) }}">Modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
