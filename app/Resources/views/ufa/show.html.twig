{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Ufa</h1>
            <div class="row">
                <div class="col-sm-9 col-12">
                    <table>
                        <tbody>
                            <tr>
                                <th>Nom de l'UFA</th>
                                <td>{{ ufa.name }}</td>
                            </tr>
                            <tr>
                                <th>Lien vers le site de l'UFA</th>
                                <td>{{ ufa.urlsite }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ ufa.description }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ ufa.address }}</td>
                            </tr>
                            <tr>
                                <th>Code Postal</th>
                                <td>{{ ufa.zipcode }}</td>
                            </tr>
                            <tr>
                                <th>Cedex</th>
                                <td>{{ ufa.cedex }}</td>
                            </tr>
                            <tr>
                                <th>Ville</th>
                                <td>{{ ufa.town }}</td>
                            </tr>
                            <tr>
                                <th>Latitude</th>
                                <td>{{ ufa.latitude }}</td>
                            </tr>
                            <tr>
                                <th>Longitude</th>
                                <td>{{ ufa.longitude }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            <div class="col-sm-3 col-12 border-left">
                <ul>
                    <li><a class="btn-group-lg" href="{{ path('ufa_index') }}">Retour Ã  la liste</a></li>
                    <li><a class="btn-group-lg" href="{{ path('ufa_edit', { 'id': ufa.id }) }}">Modifier</a></li>
                    <li>{{ form_start(delete_form) }}
                            <input class="btn-danger btn-group-lg" type="submit" value="Supprimer">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
