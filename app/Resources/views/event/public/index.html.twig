{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Nos évènements</h1>

        {% for event in events %}

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.title }}</h5>
                        <p class="card-text">{{ event.description }}</p>
                        <a href="#" class="btn btn-primary">{% if event.date %}{{ event.date|date('Y-m-d') }}{% endif %}</a>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}
