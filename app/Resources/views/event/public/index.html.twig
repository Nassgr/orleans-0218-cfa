{% extends 'layout.html.twig' %}
{% block title %}Liste des évenements du cfa sms de Blois{% endblock %}
{% block body %}
    <div class="container">
    <h2>Nos évènements</h2>
        <body class="events-bg">
        {% for event in events %}
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        {% if event.date %}{{ event.date|date('d/m/Y') }}{% endif %}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ event.title }}</h5>
                        <p class="card-text">{{ event.description }}</p>
                        <a class="btn btn-outline-primary float-right" href="{{ path('event_show', { 'id': event.id }) }}" class="btn btn-primary">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        </body>
    </div>
{% endblock %}
